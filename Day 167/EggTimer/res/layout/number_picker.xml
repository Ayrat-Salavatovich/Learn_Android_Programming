<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/number_picker_margin"
    android:layout_marginTop="@dimen/number_picker_margin"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/imageButtonNumberDown"
        style="@style/LeftButton"
        android:layout_width="@dimen/number_picker_button"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textViewNumber"
            style="@style/SolidEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_view_default_number"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/textViewHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:text="@string/empty_string"
            android:textColor="#FFF" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButtonNumberUp"
        style="@style/RightButton"
        android:layout_width="@dimen/number_picker_button"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_up_float" />

</LinearLayout>