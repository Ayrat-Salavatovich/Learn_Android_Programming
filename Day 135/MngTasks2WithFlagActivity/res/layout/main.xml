<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFlagActivityTaskOnHome"
        android:layout_centerHorizontal="true"
        android:onClick="onClickInfo"
        android:text="@string/info" />

    <Button
        android:id="@+id/buttonFlagActivityClearTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/flag_activity_clear_task" />

    <Button
        android:id="@+id/buttonFlagActivityClearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFlagActivityClearTask"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/flag_activity_clear_top" />

    <Button
        android:id="@+id/buttonFlagActivityClearWhenTaskReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFlagActivityClearTop"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/flag_activity_clear_when_task_reset" />

    <Button
        android:id="@+id/buttonFlagActivityNewTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFlagActivityClearWhenTaskReset"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/flag_activity_new_task" />

    <Button
        android:id="@+id/buttonFlagActivityNoHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFlagActivityNewTask"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/flag_activity_no_history" />

    <Button
        android:id="@+id/buttonFlagActivityReorderToFront"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFlagActivityNoHistory"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/flag_activity_reorder_to_front" />

    <Button
        android:id="@+id/buttonFlagActivitySingleTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFlagActivityReorderToFront"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/flag_activity_single_top" />

    <Button
        android:id="@+id/buttonFlagActivityTaskOnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonFlagActivitySingleTop"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/flag_activity_task_on_home" />

</RelativeLayout>