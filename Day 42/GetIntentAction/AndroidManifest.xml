<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ayrat.salavatovich.gmail.com.day_42.getintentaction"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ayrat.salavatovich.gmail.com.day_42.getintentaction.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".action.show.Info"
            android:label="@string/app_name_date_time" >
            <intent-filter>
                <action android:name="ayrat.salavatovich.gmail.com.day_42.getintentaction.action.showtime" />
                <action android:name="ayrat.salavatovich.gmail.com.day_42.getintentaction.action.showdate" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>