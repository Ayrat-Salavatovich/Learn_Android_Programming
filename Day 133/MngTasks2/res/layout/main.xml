<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:onClick="onClickInfo"
        android:text="@string/info" />

    <Button
        android:id="@+id/buttonStartLaunchModeStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonInfo"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:onClick="onClickStart"
        android:text="@string/start_launch_mode_standard" />

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonStartLaunchModeSingleTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonStartLaunchModeStandard"
        android:layout_centerHorizontal="true"
        android:onClick="onClickStart"
        android:text="@string/start_launch_mode_single_top" />

    <Button
        android:id="@+id/buttonStartLaunchModeSingleTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonStartLaunchModeSingleTop"
        android:layout_centerHorizontal="true"
        android:onClick="onClickStart"
        android:text="@string/start_launch_mode_single_task" />

    <Button
        android:id="@+id/buttonStartLaunchModeSingleInstance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonStartLaunchModeSingleTask"
        android:layout_centerHorizontal="true"
        android:onClick="onClickStart"
        android:text="@string/start_launch_mode_single_instance" />

</RelativeLayout>