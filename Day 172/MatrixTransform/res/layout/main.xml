<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/buttonOpenTranslateActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickOpenActivity"
        android:text="@string/button_translate" />

    <Button
        android:id="@+id/buttonOpenScaleActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOpenTranslateActivity"
        android:layout_centerHorizontal="true"
        android:onClick="onClickOpenActivity"
        android:text="@string/button_scale" />

    <Button
        android:id="@+id/buttonOpenRotateActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOpenScaleActivity"
        android:layout_centerHorizontal="true"
        android:onClick="onClickOpenActivity"
        android:text="@string/button_rotate" />

    <Button
        android:id="@+id/buttonOpenPostPreTranslateActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOpenRotateActivity"
        android:layout_centerHorizontal="true"
        android:onClick="onClickOpenActivity"
        android:text="@string/button_post_pre_translate" />

    <Button
        android:id="@+id/buttonOpenSkewActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOpenPostPreTranslateActivity"
        android:layout_centerHorizontal="true"
        android:onClick="onClickOpenActivity"
        android:text="@string/button_skew" />

    <Button
        android:id="@+id/buttonOpenMapActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOpenSkewActivity"
        android:layout_centerHorizontal="true"
        android:onClick="onClickOpenActivity"
        android:text="@string/button_map" />

</RelativeLayout>