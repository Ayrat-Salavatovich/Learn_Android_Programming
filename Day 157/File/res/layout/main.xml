<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Ð´inearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/buttonShowGetDirActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_show_get_dir_activity" />

    <Button
        android:id="@+id/buttonShowOpenFileOutputActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_show_open_file_output_activity" />

    <Button
        android:id="@+id/buttonShowGetFilesListActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_show_get_files_list_activity" />

    <Button
        android:id="@+id/buttonShowOpenFileInputActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_show_open_file_input_activity" />

    <Button
        android:id="@+id/buttonShowDeleteFileActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_show_delete_file_activity" />

    <Button
        android:id="@+id/buttonShowGetCacheDirActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_show_get_cache_dir_activity" />

</LinearLayout>